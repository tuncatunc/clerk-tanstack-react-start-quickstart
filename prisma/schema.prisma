generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                   String @id @default(cuid())
  userId               String
  sideshiftOrderId     String
  sideshiftOrderJson   Json // https://sideshift.ai/api/v2/shifts/:shiftId
  sideshiftOrderStatus String // settled | refund | refunded | expired | 

  @@unique([sideshiftOrderId])
  @@index([userId])
}
